# =============================================================================
# Environment Variables for Dataflow Pipeline
# =============================================================================
# Copy this file to .env and update with your values
# NEVER commit .env to version control
# =============================================================================

# GCP Configuration
GCP_PROJECT=your-project-id
GCP_REGION=us-central1

# Environment (dev, staging, prod)
ENVIRONMENT=dev

# Input Configuration
INPUT_BUCKET=your-project-id-input-dev
INPUT_FILE=data/input.csv
CSV_DELIMITER=,
CSV_HAS_HEADER=true

# BigQuery Configuration
BQ_DATASET=data_warehouse_dev
BQ_TABLE=processed_records

# Dead Letter Configuration
DEAD_LETTER_BUCKET=your-project-id-dead-letter-dev

# Dataflow Configuration
DATAFLOW_BUCKET=your-project-id-dataflow-dev
SERVICE_ACCOUNT=dataflow-sa@your-project-id.iam.gserviceaccount.com

# Validation Configuration
REQUIRED_FIELDS=id,name,email
